        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

// Check if the user already has the customer role
    var roleGR = new GlideRecord('sys_user_has_role');
    roleGR.addQuery('user', current.sys_id);
    roleGR.addQuery('role.name', 'x_1662488_pcpm.customer');
    roleGR.query();

    if (!roleGR.hasNext()) {
        // Assign role_customer
        var role = new GlideRecord('sys_user_role');
        role.get('name', 'x_1662488_pcpm.customer'); // Make sure the role exists!

        var userRole = new GlideRecord('sys_user_has_role');
        userRole.initialize();
        userRole.user = current.sys_id;
        userRole.role = role.sys_id;
        userRole.insert();
	}
})(current, previous);]]></script>
